@using WebAppMongoDB.Entities;
@model List<Player>


<div class="header">
	<h1 class="display-3">Blog List With MongoDB</h1><hr />
</div>

<div class="row">
	<div class="col">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>Full Name</th>
					<th>Shoe Size</th>
					<th>Team</th>
					<th>Is Active</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (Player item in Model)
				{
					<tr>
						<td>@item.FullName</td>
						<td>@item.ShoeSize</td>
						<td>@item.Team</td>
						<td>@item.IsActive</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-2">Edit</a>
							<a onclick="return confirm('Are you sure delete this player ?')" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
						</td>
					</tr>
				}

			</tbody>
		</table>
		<div class="mt-4">
			<a asp-action="Create" class="btn btn-primary">Add Player</a>
		</div>
	</div>
</div>
